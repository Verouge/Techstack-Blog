<div class="container mx-auto mt-12">
    <div class="mb-6 flex justify-between items-center">
        <h2 class="text-2xl font-bold">Your Dashboard</h2>
        <a href="/posts/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create New
            Post</a>
    </div>

    {{#each posts as |post|}}
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h3 class="text-xl font-bold mb-2">{{post.title}}</h3>
        <p class="text-gray-700 text-base mb-4">{{post.contents}}</p>

        <div class="flex justify-between">
            <a href="/posts/edit/{{post.id}}"
                class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-4 rounded">Edit</a>
            <a href="/posts/delete/{{post.id}}"
                class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-4 rounded">Delete</a>
        </div>
    </div>
    {{else}}
    <p class="text-gray-700">You haven't created any posts yet. Start by clicking "Create New Post" above.</p>
    {{/each}}
</div>